<%

mimetype_codes_to_display_strings = {
  'DOCUMENT' => 'Document',
  'HTML' => 'HTML',
  'PDF' => 'PDF',
  'SLIDESHOW' => 'Slideshow',
  'SPREADSHEET' => 'Spreadsheet',
  'XML' => 'XML',
}

%>

<ul>
  <% paginator =
      Blacklight::Solr::FacetPaginator.new(display_facet.items,
        :limit => facet_limit_for(solr_field))
  %>
  <% paginator.items.each do |item| -%>
    <li>
    <% if facet_in_params?( solr_field, item.value ) %>
        <%= render_selected_facet_value_with_custom_display_text(solr_field, item, 'custom') %>
      <% else %>
        <%= render_facet_value_with_custom_display_text(solr_field, item, {}, mimetype_codes_to_display_strings[item.value]) %>
    <% end -%>
    </li>
  <% end %>

  <% if(paginator.has_next?)  %>
    <li class="more_facets_link"><%= link_to('more Â»', params.merge(:id => solr_field, :action=>"facet"), :class => "more_facets_link") %></li>
  <% end %>

</ul>
